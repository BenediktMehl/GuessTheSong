{
  "rewrites": [
    {
      "source": "/join",
      "destination": "/index.html"
    },
    {
      "source": "/lobby",
      "destination": "/index.html"
    },
    {
      "source": "/spotifycallback",
      "destination": "/index.html"
    },
    {
      "source": "/host-lobby",
      "destination": "/index.html"
    },
    {
      "source": "/settings",
      "destination": "/index.html"
    },
    {
      "source": "/hostgame",
      "destination": "/index.html"
    },
    {
      "source": "/play",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/((?!join|lobby|spotifycallback|host-lobby|settings|hostgame|play|_next|.*\\..*).+)",
      "destination": "/",
      "permanent": false
    }
  ]
}
